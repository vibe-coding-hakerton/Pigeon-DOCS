# ===========================================
# Pigeon Backend 환경 변수 (Django)
# ===========================================
# 이 파일을 백엔드 프로젝트 루트에 복사하세요:
#   cp .env.backend.example ../backend/.env
#
# 주의: .env 파일은 절대 Git에 커밋하지 마세요!
# ===========================================

# -------------------------------------------
# Google OAuth2 설정
# -------------------------------------------
# Google Cloud Console에서 발급
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback/

# -------------------------------------------
# JWT 설정
# -------------------------------------------
# JWT 서명에 사용할 비밀 키 (랜덤 문자열 권장)
# 생성: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this

# -------------------------------------------
# OAuth 토큰 암호화 설정 (Fernet)
# -------------------------------------------
# Gmail OAuth 토큰 암호화에 사용 (Fernet 대칭키)
# 생성: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
TOKEN_ENCRYPTION_KEY=your-fernet-encryption-key

# JWT 토큰 만료 시간
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# -------------------------------------------
# LLM API 설정 (Gemini)
# -------------------------------------------
# Google AI Studio에서 발급
# https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# -------------------------------------------
# 데이터베이스 설정
# -------------------------------------------
DATABASE_URL=sqlite:///./pigeon.db

# -------------------------------------------
# Django 설정
# -------------------------------------------
# Django Secret Key (랜덤 문자열)
# 생성: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-django-secret-key

# 환경: development | staging | production
APP_ENV=development

# 디버그 모드 (운영 시 false)
DEBUG=true

# 허용된 호스트 (콤마로 구분)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS 허용 오리진 (프론트엔드 주소)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -------------------------------------------
# 동기화 설정
# -------------------------------------------
# 백그라운드 폴링 주기 (초)
SYNC_POLLING_INTERVAL=180

# 초기 동기화 배치 크기
SYNC_BATCH_SIZE=20

# 동기화 범위 (개월)
SYNC_MONTHS_RANGE=6

# -------------------------------------------
# 테스트 계정 (E2E 테스트용, 선택)
# -------------------------------------------
TEST_GMAIL_ACCOUNT_1=your-test-account-1@gmail.com
TEST_GMAIL_ACCOUNT_2=your-test-account-2@gmail.com
